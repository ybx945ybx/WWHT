<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp">

    <RelativeLayout
        android:id="@+id/relLike"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_banner_info_like_not_like"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/imgHeart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_heart_light_grey"/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/countTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_centerVertical="true"
            android:textColor="#BFBFBF"
            android:layout_toRightOf="@+id/imgHeart"
            android:text="喜欢"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:id="@+id/likePeopleLayout"
        android:background="@mipmap/bg_rectangle_1"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
