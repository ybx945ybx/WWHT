<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhite"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_easyopt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/padding_medium"
        android:paddingTop="@dimen/padding_medium">

        <!-- 草单封面图 -->
        <ImageView
            android:id="@+id/img_easyopt_logo"
            android:layout_width="@dimen/avatar_ultra_large"
            android:layout_height="@dimen/avatar_ultra_large"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_medium"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 草单名 -->
            <com.a55haitao.wwht.ui.view.HaiTextView
                android:id="@+id/tv_easyopt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="16sp"
                tools:text="谁说温暖毛绒绒不chic"/>

            <!-- 作者 -->
            <com.a55haitao.wwht.ui.view.HaiTextView
                android:id="@+id/tv_easyopt_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:maxLines="1"
                android:textColor="#999999"
                android:textSize="14sp"
                tools:text="草单by 喵一只"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:src="@mipmap/ic_arrow_right_grey"/>
    </LinearLayout>

    <com.a55haitao.wwht.ui.view.HaiTextView
        android:id="@+id/tv_latest_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3F3F9"
        android:gravity="center_vertical"
        android:paddingBottom="7dp"
        android:paddingLeft="@dimen/padding_large"
        android:paddingTop="7dp"
        android:text="最新评论"
        android:textColor="#666666"
        android:textSize="12sp"/>

</LinearLayout>