<?xml version="1.0" encoding="utf-8"?>
<com.a55haitao.wwht.ui.view.SiteHeaderLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/siteHeaderLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    app:layout_scrollFlags="scroll|snap">

    <com.a55haitao.wwht.ui.view.HaiTextView
        android:id="@+id/nameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bigCoverImg"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/colorGray333333"
        android:textSize="@dimen/size_28"
        tools:text="Coach/蔻驰"/>

    <com.a55haitao.wwht.ui.view.HaiTextView
        android:id="@+id/countryTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/nameTxt"
        android:layout_toRightOf="@id/nameTxt"
        android:paddingLeft="5dp"
        android:textSize="@dimen/size_24"
        tools:text="美国"/>

    <ImageView
        android:id="@+id/bigCoverImg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_400"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        tools:background="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_400"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:background="@color/colorPrimary"/>

    <RelativeLayout
        android:id="@+id/rlytsmallCoverImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/nameTxt"
        android:layout_marginBottom="-10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/colorActivityBackground">

        <ImageView
            android:id="@+id/smallCoverImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/smallCoverTex"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGray26241F"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_20"
            android:visibility="gone"/>
    </RelativeLayout>

    <com.a55haitao.wwht.ui.view.HaiTextView
        android:id="@+id/descripeTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlytsmallCoverImg"
        android:layout_marginTop="28dp"
        android:ellipsize="end"
        android:lineSpacingExtra="5.3dp"
        android:maxLines="2"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:textSize="@dimen/size_24"/>

    <android.support.design.widget.CheckableImageButton
        android:id="@+id/arrowImgBtn"
        android:layout_width="24dp"
        android:layout_height="27dp"
        android:layout_below="@id/descripeTxt"
        android:layout_centerHorizontal="true"
        android:background="#0fff"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:src="@mipmap/ic_arrow_down_small"
        tools:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_20"
        android:layout_below="@id/arrowImgBtn"
        android:background="@color/colorActivityBackground"/>

</com.a55haitao.wwht.ui.view.SiteHeaderLayout>