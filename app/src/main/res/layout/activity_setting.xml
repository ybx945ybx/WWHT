<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorActivityBackground"
              android:orientation="vertical">

    <!-- 标题 -->
    <com.a55haitao.wwht.ui.view.DynamicHeaderView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:headerTitleTxt="设置">

    </com.a55haitao.wwht.ui.view.DynamicHeaderView>

    <!-- content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <!-- container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical">

                <!-- 绑定手机 -->
                <RelativeLayout
                    android:id="@+id/rl_bind_phone"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="绑定手机"
                        android:textColor="@color/colorDark"/>

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:id="@+id/tv_bindPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="4dp"
                        tools:text="13162107996"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/dot_line"/>

                <!-- 绑定第三方 -->
                <RelativeLayout
                    android:id="@+id/rl_settings_bindThird"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp">

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="绑定第三方"
                        android:textColor="@color/colorDark"/>

                    <LinearLayout
                        android:id="@+id/ll_settings_bindThird"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="2dp"
                        android:layout_toLeftOf="@+id/img_settings_bindThird"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_3rd_wechat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_wechat_3rd"/>

                        <ImageView
                            android:id="@+id/img_3rd_weibo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:src="@mipmap/ic_weibo_3rd"/>

                        <ImageView
                            android:id="@+id/img_3rd_qq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:src="@mipmap/ic_qq_3rd"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_settings_bindThird"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_arrow_right_small"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/dot_line"/>

                <!-- 修改密码 -->
                <RelativeLayout
                    android:id="@+id/rl_settings_changePwd"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_arrow_right_small"/>

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:id="@+id/haiTextView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="修改密码"
                        android:textColor="@color/colorDark"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/dot_line"/>

                <!-- 地址管理 -->
                <RelativeLayout
                    android:id="@+id/rl_settings_manageAddress"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp">

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="地址管理"
                        android:textColor="@color/colorDark"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_arrow_right_small"/>
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="#fff"
                android:orientation="vertical">
                <!-- 分享应用 -->
                <RelativeLayout
                    android:id="@+id/rl_settings_shareApp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp">

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="分享应用"
                        android:textColor="@color/colorDark"/>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_arrow_right_small"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/dot_line"/>

                <!-- 常见问题 -->
                <RelativeLayout
                    android:id="@+id/rl_helpdoc"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp">

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="常见问题"
                        android:textColor="@color/colorDark"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_arrow_right_small"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/dot_line"/>

                <!-- 购物须知 -->
                <RelativeLayout
                    android:id="@+id/rl_sale_after"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp">

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="购物须知"
                        android:textColor="@color/colorDark"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_arrow_right_small"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/dot_line"/>

                <!-- 关于我们 -->
                <RelativeLayout
                    android:id="@+id/rl_settings_aboutUs"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_arrow_right_small"/>

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:id="@+id/haiTextView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="关于我们"
                        android:textColor="@color/colorDark"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/dot_line"/>

                <!-- 意见反馈 -->
                <RelativeLayout
                    android:id="@+id/rl_settings_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp">

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="意见反馈"
                        android:textColor="@color/colorDark"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_arrow_right_small"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/dot_line"/>

                <!-- 清除缓存 -->
                <RelativeLayout
                    android:id="@+id/rl_settings_clearCache"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/img_settings_rightArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_arrow_right_small"/>

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:id="@+id/tv_settings_cacheSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/img_settings_rightArrow"/>

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:id="@+id/haiTextView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_settings_cacheSize"
                        android:layout_alignBottom="@+id/tv_settings_cacheSize"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="清除缓存"
                        android:textColor="@color/colorDark"/>
                </RelativeLayout>
            </LinearLayout>

            <!-- 退出登录按钮 -->
            <com.a55haitao.wwht.ui.view.HaiTextView
                android:id="@+id/tv_settings_logout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="96dp"
                android:layout_marginTop="48dp"
                android:background="@drawable/bg_item_selectable"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="#E63956"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>