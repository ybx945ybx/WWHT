<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorWhite"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorPurple"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/headerCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/shape_clear_14_36"
            android:drawableRight="@drawable/shape_clear_35_36"
            android:drawableTop="@drawable/sl_shoppingcart_checkbox"/>

        <ImageView
            android:id="@+id/headerFlagImage"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/headerCheckBox"
            android:src="@mipmap/ic_flag_france_rect"/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/headerSellerTxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="65dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorGray333333"
            android:textSize="@dimen/size_24"
            tools:text="Victoria's secret官网发货"/>

    </RelativeLayout>

    <!--<include layout="@layout/line_divider_m_1_e5e5e5"/>-->

    <LinearLayout
        android:id="@+id/cutoffLin"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:background="@color/colorOrangeFFFBF0"
        android:orientation="horizontal">

        <!--android:background="@drawable/shape_btn_banana"-->
        <com.a55haitao.wwht.ui.view.HaiTextView
            android:layout_width="32dp"
            android:layout_height="18dp"
            android:layout_marginLeft="36dp"
            android:background="@drawable/boder_orange_bg"
            android:gravity="center"
            android:text="运费"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/size_24"/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/cutoffTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorGray666666"
            android:textSize="@dimen/size_24"
            tools:text="满￥300免官网运费 "/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/cutoffButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:drawableRight="@mipmap/ic_arrow_right_small"
            android:gravity="right"
            android:textColor="@color/colorRed"
            android:textSize="12sp"
            app:expandTypeface="gotham"
            tools:text="再买￥954，去凑单"
            android:visibility="gone"/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/tvTransferFeeMeet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="@color/colorGray999999"
            android:textSize="12sp"
            android:text="已满足"
            android:visibility="visible"/>

    </LinearLayout>


</LinearLayout>