<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#E5FFFFFF"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:padding="40dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.a55haitao.wwht.ui.view.HaiTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="什么是积分"
                android:textColor="#333"
                android:textSize="16sp"/>

            <com.a55haitao.wwht.ui.view.HaiTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:lineSpacingMultiplier="1.3"
                android:text="@string/membership_point_desc"
                android:textColor="#666666"
                android:textSize="14sp"/>

            <com.a55haitao.wwht.ui.view.HaiTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:text="积分怎么获得"
                android:textColor="#333"
                android:textSize="16sp"/>

            <!-- 表格 -->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="#F3F3F9">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFD401">

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:id="@+id/haiTextView6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_medium"
                        android:text="操作"
                        android:textColor="#333333"
                        android:textSize="12sp"/>

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_medium"
                        android:text="获得积分"
                        android:textColor="#333333"
                        android:textSize="12sp"/>

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_medium"
                        android:text="说明"
                        android:textColor="#333333"
                        android:textSize="12sp"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_medium"
                        android:text="操作"
                        android:textColor="#666666"
                        android:textSize="12sp"/>

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_medium"
                        android:text="+1"
                        android:textColor="#666666"
                        android:textSize="12sp"/>

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_medium"
                        android:text="每日上限20"
                        android:textColor="#666666"
                        android:textSize="12sp"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_top_purple">

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_medium"
                        android:text="评论"
                        android:textColor="#666666"
                        android:textSize="12sp"/>

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:id="@+id/haiTextView4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_medium"
                        android:text="+5"
                        android:textColor="#666666"
                        android:textSize="12sp"/>

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_medium"
                        android:text="每日上限50"
                        android:textColor="#666666"
                        android:textSize="12sp"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_top_purple">

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_medium"
                        android:text="分享"
                        android:textColor="#666666"
                        android:textSize="12sp"/>

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:id="@+id/haiTextView5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_medium"
                        android:text="+10"
                        android:textColor="#666666"
                        android:textSize="12sp"/>

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_medium"
                        android:text="每日上限100"
                        android:textColor="#666666"
                        android:textSize="12sp"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_top_purple">

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:id="@+id/haiTextView3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_medium"
                        android:text="发布新笔记"
                        android:textColor="#666666"
                        android:textSize="12sp"/>

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_medium"
                        android:text="+30"
                        android:textColor="#666666"
                        android:textSize="12sp"/>

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_medium"
                        android:text="每日上限300"
                        android:textColor="#666666"
                        android:textSize="12sp"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_top_purple">

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_medium"
                        android:text="笔记被加精"
                        android:textColor="#666666"
                        android:textSize="12sp"/>

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_medium"
                        android:text="+200"
                        android:textColor="#666666"
                        android:textSize="12sp"/>

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_medium"
                        android:text="无上限"
                        android:textColor="#666666"
                        android:textSize="12sp"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_top_purple">

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_medium"
                        android:text="上传头像"
                        android:textColor="#666666"
                        android:textSize="12sp"/>

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_medium"
                        android:text="+100"
                        android:textColor="#666666"
                        android:textSize="12sp"/>

                    <com.a55haitao.wwht.ui.view.HaiTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_medium"
                        android:text="每个账号首次"
                        android:textColor="#666666"
                        android:textSize="12sp"/>

                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/img_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@mipmap/ic_cross_grey_large"/>


</LinearLayout>