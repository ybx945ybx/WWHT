    <!--商品-->

    <LinearLayout
        android:id="@+id/goodsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="商品价格："
            android:textColor="@color/colorGray999999"
            android:textSize="12sp"
            app:expandTypeface="light"/>

        <!--结算信息-->
        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/sumTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right|center_vertical"
            android:textColor="@color/colorGray999999"
            android:textSize="12sp"
            app:expandTypeface="gotham"
            tools:text="￥195"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llyt_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="商家优惠："
            android:textColor="@color/colorGray999999"
            android:textSize="12sp"
            app:expandTypeface="light"/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/activityTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right|center_vertical"
            android:textColor="@color/colorGray999999"
            android:textSize="12sp"
            app:expandTypeface="gotham"
            tools:text="￥195"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="官网运费："
            android:textColor="@color/colorGray999999"
            android:textSize="12sp"
            app:expandTypeface="light"/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/expressTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right|center_vertical"
            android:textColor="@color/colorGray999999"
            android:textSize="12sp"
            app:expandTypeface="gotham"
            tools:text="￥195"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/extraTaxLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:paddingLeft="10dp"
        android:orientation="horizontal">

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/haiTextView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="海外消费税："
            android:textColor="@color/colorGray999999"
            android:textSize="12sp"
            app:expandTypeface="light"/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/extraTaxTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:gravity="right|center_vertical"
            android:textColor="@color/colorGray999999"
            android:textSize="12sp"
            app:expandTypeface="gotham"
            tools:text="￥195"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:paddingLeft="10dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="预估国际运费："
            android:textColor="@color/colorGray999999"
            android:textSize="12sp"
            app:expandTypeface="light"
            />


        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/taxTxt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:drawableRight="@mipmap/ic_question_mark"
            android:gravity="right|center_vertical"
            android:textColor="@color/colorGray999999"
            android:textSize="12sp"
            app:expandTypeface="gotham"
            tools:text="￥195"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:paddingLeft="10dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="关税："
            android:textColor="@color/colorGray999999"
            android:textSize="12sp"
            app:expandTypeface="light"/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/bigTariffTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:drawableRight="@mipmap/ic_question_mark"
            android:gravity="right|center_vertical"
            android:textColor="@color/colorGray999999"
            android:textSize="12sp"
            app:expandTypeface="gotham"
            tools:text="￥195"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="@dimen/margin_small"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/haiTextView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="总计："
            android:textColor="@color/colorTab"
            android:textSize="12sp"/>

        <!--总计-->
        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/totleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:drawablePadding="2dp"
            android:gravity="right|center_vertical"
            android:textColor="@color/colorTab"
            android:textSize="12sp"/>
    </LinearLayout>
    <!--<include layout="@layout/line_divider" />-->

</LinearLayout>