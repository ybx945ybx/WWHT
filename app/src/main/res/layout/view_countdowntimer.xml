<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/llyt_root"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/colorGray26241F"
              android:orientation="horizontal"
              android:paddingBottom="3dp"
              android:paddingTop="3dp">

    <LinearLayout
        android:id="@+id/time_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/tv_hour_decade"
            style="@style/CountDownTimerViewStyle"
            app:expandTypeface="gotham"/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/tv_hour_unit"
            style="@style/CountDownTimerViewStyle"
            android:layout_marginLeft="1dp"
            app:expandTypeface="gotham"/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=":"
            android:textColor="#ffffff"
            android:textSize="10sp"
            app:expandTypeface="gotham"/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/tv_min_decade"
            style="@style/CountDownTimerViewStyle"
            android:layout_marginLeft="5dp"
            app:expandTypeface="gotham"/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/tv_min_unit"
            style="@style/CountDownTimerViewStyle"
            android:layout_marginLeft="1dp"
            app:expandTypeface="gotham"/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=":"
            android:textColor="#ffffff"
            android:textSize="10sp"
            app:expandTypeface="gotham"/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/tv_sec_decade"
            style="@style/CountDownTimerViewStyle"
            android:layout_marginLeft="5dp"
            app:expandTypeface="gotham"/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/tv_sec_unit"
            style="@style/CountDownTimerViewStyle"
            android:layout_marginLeft="1dp"
            app:expandTypeface="gotham"/>
    </LinearLayout>

</LinearLayout>