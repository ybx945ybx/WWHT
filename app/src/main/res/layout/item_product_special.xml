<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ll_product"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/margin_large"
              android:layout_marginLeft="25dp"
              android:layout_marginRight="25dp"
              android:background="@drawable/bg_product_special"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_pic"
        android:layout_width="@dimen/special_product_pic_size"
        android:layout_height="@dimen/special_product_pic_size"
        android:layout_margin="@dimen/margin_medium"
        android:background="@color/colorWhite"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#333"
            android:textSize="14sp"
            tools:text="Jimmy Choo"/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:maxLines="1"
            android:textColor="#999"
            android:textSize="12sp"
            tools:text="Jimmy Choo"/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:maxLines="1"
            android:textColor="#FF8000"
            android:textSize="12sp"
            tools:text="Jimmy Choo"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:src="@mipmap/ic_arrow_right_grey"/>

</LinearLayout>