<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <View
        android:id="@+id/leftIndictor"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@color/colorGray26241F"/>

    <com.a55haitao.wwht.ui.view.HaiTextView
        android:id="@+id/catogoryTotalNameTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="24dp"
        android:paddingTop="12dp"
        android:text="女装"
        android:textColor="@color/colorGray666666"
        android:textSize="@dimen/size_24"/>

    <View
        android:id="@+id/rightIndictor"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/colorDivider"/>

</LinearLayout>
