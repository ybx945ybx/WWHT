<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorBlur40"
	android:gravity="center"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/centerView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/shape_activity_window"
		android:orientation="vertical">

		<com.a55haitao.wwht.ui.view.HaiTextView
			android:id="@+id/titleTxt"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="16dp"
			android:layout_marginTop="24dp"
			android:gravity="center"
			android:text="输入兑换码领取优惠券"
			android:textColor="@color/colorGray333333"
			android:textSize="@dimen/size_32"/>

		<EditText
			android:id="@+id/exchangeCouponTxt"
			android:layout_width="200dp"
			android:layout_height="40dp"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:background="@drawable/shape_exchange_coupon_edit_text"
			android:gravity="center"
			android:hint="请输入兑换码"
			android:imeOptions="actionDone"
			android:singleLine="true"
			/>

		<RelativeLayout
			android:id="@+id/exchangeCouponLayout"
			android:layout_width="200dp"
			android:layout_height="85dp"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:visibility="gone">

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:src="@mipmap/ic_exchange_coupon_bg"/>

			<com.a55haitao.wwht.ui.view.HaiTextView
				android:id="@+id/exchangeCouponTitle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:gravity="center"
				android:text="限时全场包关税"
				android:textColor="@color/colorOrange"
				android:textSize="@dimen/size_28"/>

			<com.a55haitao.wwht.ui.view.HaiTextView
				android:id="@+id/exchangeCouponSubTitle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="36dp"
				android:gravity="center"
				android:text="全场满29可用"
				android:textColor="@color/colorGray666666"
				android:textSize="@dimen/size_24"/>

			<com.a55haitao.wwht.ui.view.HaiTextView
				android:id="@+id/exchangeCouponDate"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="58dp"
				android:gravity="center"
				android:text="2014.12.12-2016.01.20"
				android:textColor="@color/colorGray999999"
				android:textSize="@dimen/size_24"/>

		</RelativeLayout>

		<Button
			android:id="@+id/exchangeCouponBtn"
			android:layout_width="200dp"
			android:layout_height="40dp"
			android:layout_marginBottom="20dp"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:layout_marginTop="16dp"
			android:background="@drawable/shape_btn_black"
			android:text="确认兑换"
			android:textColor="@color/colorWhite"
			android:textSize="@dimen/size_28"/>

		<com.a55haitao.wwht.ui.view.HaiTextView
			android:id="@+id/exchangeCouponErrMsgTxt"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="20dp"
			android:text="兑换码错误，请重新输入"
			android:textAlignment="center"
			android:textColor="@color/colorRed"
			android:textSize="@dimen/size_24"
			android:visibility="gone"/>

	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="140dp"
		android:background="@color/colorClear"/>

</LinearLayout>