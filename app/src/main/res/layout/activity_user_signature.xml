<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorActivityBackground"
    android:orientation="vertical"
    tools:activity="com.a55haitao.wwht.ui.activity.myaccount.UserSignatureActivity">

    <com.a55haitao.wwht.ui.view.DynamicHeaderView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:headerRightTxt="@string/save"
        app:headerTitleTxt="个性签名">
    </com.a55haitao.wwht.ui.view.DynamicHeaderView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_big"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_signature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/hint_signature"
            android:lineSpacingMultiplier="1.3"
            android:maxLines="4"
            android:paddingLeft="@dimen/padding_medium"
            android:paddingRight="@dimen/padding_medium"
            android:paddingTop="@dimen/padding_big"
            android:textColor="@color/colorGray333333"
            android:textSize="14sp"
            tools:text="分享各种高逼格有品质的好物，给大家讲讲各界中的爱马仕，关注后不吃亏只吃土哈。微信公众号：白斑马"/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/tv_character_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="3dp"
            android:textColor="#999999"
            android:textSize="12sp"
            tools:text="18"/>

    </LinearLayout>
</LinearLayout>
