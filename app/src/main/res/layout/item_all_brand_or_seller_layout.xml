<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:descendantFocusability="blocksDescendants"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <!--<ImageView-->
            <!--android:id="@+id/leftBrandImg"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:src="@mipmap/ic_launcher"-->
            <!--android:layout_width="32dp"-->
            <!--android:layout_height="32dp" />-->

        <RelativeLayout
            android:id="@+id/rlytsmallCoverImg"
            android:layout_marginLeft="10dp"
            android:layout_width="32dp"
            android:layout_height="32dp">

            <ImageView
                android:id="@+id/smallCoverImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <com.a55haitao.wwht.ui.view.HaiTextView
                android:id="@+id/smallCoverTex"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorGray26241F"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size_20"
                android:visibility="gone"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/brandNameTxt"
            android:text="Coach/兰蔻"
            android:paddingLeft="20dp"
            android:textSize="@dimen/size_28"
            android:textColor="@color/colorTab"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <CheckedTextView
            android:checked="true"
            android:id="@+id/concernBtn"
            android:background="@drawable/sl_checkbox_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:id="@+id/dashLineView"
        android:layout_marginLeft="10dp"
        android:background="@mipmap/dot_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>