<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/spec_selection_zone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 规格名称 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/specNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="颜色"
            android:textColor="@color/colorGray333333"
            android:textSize="@dimen/size_28" />

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/specSizeCompare"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:drawableRight="@mipmap/ic_arrow_right_small"
            android:gravity="center_vertical|right"
            android:text="尺码对照"
            android:textColor="@color/colorGray666666"
            android:textSize="@dimen/size_24"
            android:visibility="gone" />

    </LinearLayout>

    <!-- 规格选项 -->
    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/specValueFlowlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:max_select="1"></com.zhy.view.flowlayout.TagFlowLayout>

    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@mipmap/dot_line"/>


</LinearLayout>


