<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBlur40">

    <com.a55haitao.wwht.ui.view.HaiTextView
        android:id="@+id/activityCloseBtn"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_above="@+id/centerView"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_activity_circle_close"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/colorWhite"
        android:textSize="10sp"
        app:expandTypeface="gotham"/>

    <LinearLayout
        android:id="@+id/centerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/activityImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:background="@color/colorBlur100"/>

    </LinearLayout>

</RelativeLayout>
