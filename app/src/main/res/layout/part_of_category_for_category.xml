<?xml version="1.0" encoding="utf-8"?>
<com.a55haitao.wwht.ui.layout.CategoryCell
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="@dimen/padding_medium"
    android:paddingRight="@dimen/padding_medium">

    <com.a55haitao.wwht.ui.view.HaiTextView
        android:id="@+id/titleTxtView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_88"
        android:gravity="center"
        android:textColor="@color/colorTab"
        android:textSize="16sp"
        tools:text="人气品牌"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include
            android:id="@+id/layout_0"
            layout="@layout/imag_with_txt_vertical_layout"/>

        <ImageView style="@style/line_1_200_E5E5E5"/>

        <include
            android:id="@+id/layout_1"
            layout="@layout/imag_with_txt_vertical_layout"/>

        <ImageView style="@style/line_1_200_E5E5E5"/>

        <include
            android:id="@+id/layout_2"
            layout="@layout/imag_with_txt_vertical_layout"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGrayE5E5E5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include
            android:id="@+id/layout_3"
            layout="@layout/imag_with_txt_vertical_layout"/>

        <ImageView style="@style/line_1_200_E5E5E5"/>

        <include
            android:id="@+id/layout_4"
            layout="@layout/imag_with_txt_vertical_layout"/>

        <ImageView style="@style/line_1_200_E5E5E5"/>

        <include
            android:id="@+id/layout_5"
            layout="@layout/imag_with_txt_vertical_layout"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGrayE5E5E5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include
            android:id="@+id/layout_6"
            layout="@layout/imag_with_txt_vertical_layout"/>

        <ImageView style="@style/line_1_200_E5E5E5"/>

        <include
            android:id="@+id/layout_7"
            layout="@layout/imag_with_txt_vertical_layout"/>

        <ImageView style="@style/line_1_200_E5E5E5"/>

        <ImageView
            android:id="@+id/categorySAImgView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/ic_category_s_a"/>

    </LinearLayout>

</com.a55haitao.wwht.ui.layout.CategoryCell>