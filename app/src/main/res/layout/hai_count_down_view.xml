<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/llyt_root"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/time_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llyt_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.a55haitao.wwht.ui.view.HaiTextView
                android:id="@+id/tv_day_decade"
                style="@style/HaiCountDownViewStyle"
                app:expandTypeface="gotham"/>

            <com.a55haitao.wwht.ui.view.HaiTextView
                android:id="@+id/tv_day_unit"
                style="@style/HaiCountDownViewStyle"
                android:layout_marginLeft="1dp"
                app:expandTypeface="gotham"/>

            <com.a55haitao.wwht.ui.view.HaiTextView
                android:id="@+id/tv_day"
                style="@style/HaiCountDownViewStyle"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="5dp"
                android:text="å¤©"/>
        </LinearLayout>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/tv_hour_decade"
            style="@style/HaiCountDownViewStyle"
            app:expandTypeface="gotham"/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/tv_hour_unit"
            style="@style/HaiCountDownViewStyle"
            android:layout_marginLeft="1dp"
            app:expandTypeface="gotham"/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/colorOrange"
            android:textSize="12sp"
            app:expandTypeface="gotham"/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/tv_min_decade"
            style="@style/HaiCountDownViewStyle"
            android:layout_marginLeft="5dp"
            app:expandTypeface="gotham"/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/tv_min_unit"
            style="@style/HaiCountDownViewStyle"
            android:layout_marginLeft="1dp"
            app:expandTypeface="gotham"/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/colorOrange"
            android:textSize="12sp"
            app:expandTypeface="gotham"/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/tv_sec_decade"
            style="@style/HaiCountDownViewStyle"
            android:layout_marginLeft="5dp"
            app:expandTypeface="gotham"/>

        <com.a55haitao.wwht.ui.view.HaiTextView
            android:id="@+id/tv_sec_unit"
            style="@style/HaiCountDownViewStyle"
            android:layout_marginLeft="1dp"
            app:expandTypeface="gotham"/>
    </LinearLayout>

</LinearLayout>