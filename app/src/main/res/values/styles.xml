<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowAnimationStyle">@style/Animation.Activity.YTZT</item>
        <item name="actionSheetStyle">@style/ActionSheetStyleiOS7</item>
        <!--自定义AlertDialog-->
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Self</item>

    </style>

    <style name="Theme.AppCompat.Light.Dialog.Alert.Self"
           parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!--修改AlertDialog按钮的颜色-->
        <item name="colorAccent">@color/colorGray666666</item>
    </style>

    <!--首页RadioButton样式-->
    <style name="center_radio_btn_style">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/sl_tab_txt_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <!--<item name="android:textSize">14sp</item>-->
        <!--<item name="android:textStyle">normal</item>-->
    </style>

    <!--one line TextView 样式-->
    <style name="text_one_line">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>
    <!--购物车数量TextView-->
    <style name="cart_count">
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/shape_red_circle</item>
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:visibility">invisible</item>
    </style>
    <!--分割线样式-->
    <style name="line_1_200_E5E5E5">
        <item name="android:src">@color/colorGrayE5E5E5</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:paddingTop">@dimen/px_10</item>
        <item name="android:paddingBottom">@dimen/px_10</item>
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">100dp</item>
    </style>
    <!--分割线样式-->
    <style name="line_m_1_E5E5E5">
        <item name="android:src">@color/colorGrayE5E5E5</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:paddingTop">@dimen/px_10</item>
        <item name="android:paddingBottom">@dimen/px_10</item>
        <item name="android:layout_width">@dimen/px_1</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="addressItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--CategoryItem-->
    <style name="category_view_item">
        <item name="android:layout_height">@dimen/px_200</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="brand_img_item">
        <item name="android:layout_width">@dimen/px_200</item>
        <item name="android:layout_height">@dimen/px_200</item>
        <item name="android:padding">@dimen/px_40</item>
    </style>

    <!-- MultipleStatusView -->
    <style name="MultipleStatusView"/>

    <style name="MultipleStatusView.Content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">#a9b7b7</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MSVStyle" parent="MultipleStatusView">
        <item name="emptyView">@layout/page_empty</item>
        <item name="errorView">@layout/page_error</item>
        <item name="loadingView">@layout/page_loading</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="MSVStyleHomepageEasyopt" parent="MultipleStatusView">
        <item name="emptyView">@layout/page_empty_section</item>
        <item name="errorView">@layout/page_error</item>
        <item name="loadingView">@layout/page_loading</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <!-- Activity切换动画 -->
    <style name="Animation.Activity.YTZT" parent="@android:style/Animation.Activity">
        <!-- 新Activity 进入 -->
        <item name="android:activityOpenEnterAnimation">@anim/enter_next</item>
        <!-- 旧Activity退出 -->
        <item name="android:activityOpenExitAnimation">@anim/exit_next</item>
        <!-- 新Activity退出 -->
        <item name="android:activityCloseExitAnimation">@anim/exit_pre</item>
        <!-- 旧Activity进入 -->
        <item name="android:activityCloseEnterAnimation">@anim/enter_pre</item>
    </style>

    <!-- 加载中Dialog -->
    <style name="ProgressDialog" parent="android:style/Theme.Dialog">
        <!-- 设置自定义布局的背景透明 -->
        <item name="android:background">@android:color/transparent</item>
        <!-- 设置window背景透明，也就是去边框 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置Activity背景是否变灰 -->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 关注用户 -->
    <style name="CheckboxFollow" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/sl_checkbox_follow</item>
    </style>

    <!-- 关注按钮(白色) -->
    <style name="CheckboxFollowUser" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/sl_checkbox_follow_user</item>
    </style>

    <!-- 关注按钮(黑色) -->
    <style name="CheckboxFollowUserDark" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/sl_checkbox_follow_user_dark</item>
    </style>

    <!-- 黑底白色勾 -->
    <style name="CheckboxSquareBlack" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/sl_shoppingcart_checkbox</item>
    </style>

    <!-- SpecPopuWindow的动画 -->
    <style name="AnimationSpecPopuWindow">
        <item name="android:windowEnterAnimation">@anim/spec_window_fade_in</item>
        <item name="android:windowExitAnimation">@anim/spec_window_fade_out</item>
    </style>

    <!-- SpecPopupWindow Spec字体颜色 -->
    <style name="SpecDescription333">
        <item name="android:textSize">@dimen/size_28</item>
        <item name="android:textColor">@color/colorGray333333</item>
    </style>

    <style name="SpecDescription999">
        <item name="android:textSize">@dimen/size_28</item>
        <item name="android:textColor">@color/colorGray999999</item>
    </style>

    <style name="SpecDescriptionRed">
        <item name="android:textSize">@dimen/size_28</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>
    <style name="ShapBtn">
        <item name="android:textColor">@color/btn_buy_text</item>
        <item name="android:background">@drawable/btn_shape_gray_lemo_selector</item>
    </style>
    <style name="CountDownTimerViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">0</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="HaiCountDownViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">0</item>
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
