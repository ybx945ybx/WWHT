<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DynamicHeaderView">
        <attr name="headerTitleTxt" format="string"/>
        <attr name="headerRightImg" format="reference"/>
        <attr name="headerLeftImg" format="reference"/>
        <attr name="headerRightTxt" format="string"/>
        <attr name="headerRightTxtColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="HaiTextView">
        <attr name="expandTypeface" format="enum">
            <enum name="regular" value="0"/>
            <enum name="light" value="1"/>
            <enum name="gotham" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="HaiImageView">
        <attr name="viewAspectRatio" format="float"/>
    </declare-styleable>

    <declare-styleable name="MultipleStatusView">
        <attr name="loadingView" format="reference"/>
        <attr name="errorView" format="reference"/>
        <attr name="emptyView" format="reference"/>
        <attr name="noNetworkView" format="reference"/>
        <attr name="contentView" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CondicationItemView">
        <attr name="txt" format="string"/>
    </declare-styleable>

    <declare-styleable name="HotCategoryItem">
        <attr name="needBtnShow" format="boolean"/>
        <attr name="columns" format="integer"/>
    </declare-styleable>

    <declare-styleable name="EasyRecyclerViewSidebar">
        <attr name="easySidebarBackground"
              format="color"/>
        <attr name="easySidebarFontColor"
              format="color"/>
        <attr name="easySidebarTouchWrapArea"
              format="boolean"/>
    </declare-styleable>

    <!--<declare-styleable name="ItemAddToMyEasyopt">
        <attr name="logo"
              format="reference"/>
        <attr name="easyopt_name"
              format="string"/>
        <attr name="easyopt_count"
              format="integer"/>
        <attr name="checked"
              format="boolean"/>
    </declare-styleable>-->

    <declare-styleable name="AvatarView">
        <attr name="corner_size" format="dimension"/>
        <attr name="border_width" format="dimension"/>
        <attr name="placeholder" format="reference"/>
        <attr name="has_default_border" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="BrandAndSellerLogoView">
        <attr name="mwidth" format="dimension"/>
    </declare-styleable>

</resources>